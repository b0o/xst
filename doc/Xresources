! These are all possible options, presented with default values.
! xst will fallback to *.option if xst.option is not present.
! see src/config.h for more information about option meanings.

! These options only take effect on startup.
xst.termname:     xst-256color
! if you do not set shell, precedence is: -e arg, utmp option, SHELL env var, /etc/passwd shell
xst.shell:        /bin/sh

! The following options options can be reloaded via USR1 signal.
xst.font:              Liberation Mono:pixelsize=12:antialias=true:autohint=true;
xst.borderpx:          10
! Available cursor values: 2 4 6 7 = █ _ | ☃ ( 1 3 5 are blinking versions)
xst.cursorshape:       2
! thickness of underline and bar cursors
xst.cursorthickness:   2
! 0: normal blinking, 1: leave cursor border and blink with cursor's background
xst.cursorblinkstyle:  0
! 0: cursor blinks with a constant interval; 1: blinking cycle resets on key input
xst.cursorblinkontype: 1
xst.bold_font:         0
xst.xfps:              120
xst.actionfps:         30
! Kerning / character bounding-box height multiplier
xst.chscale:           1.0
! Kerning / character bounding-box width multiplier
xst.cwscale:           1.0
! blinking timeout for terminal and cursor blinking (0 disables)
xst.blinktimeout:      800
! bell volume. Value between -100 and 100. (0 disables)
xst.bellvolume:        100
! this is a char that is exposed like so: `printf '\033[z'`
xst.prompt_char:       $

! opacity==255 means what terminal will be not transparent, 0 - fully transparent
xst.opacity:      255
! Defaults taken from base16-twilight colorscheme.
xst.foreground:   #a7a7a7
xst.background:   #1e1e1e
xst.color0:       #1e1e1e
xst.color1:       #cf6a4c
xst.color2:       #8f9d6a
xst.color3:       #f9ee98
xst.color4:       #7587a6
xst.color5:       #9b859d
xst.color6:       #afc4db
xst.color7:       #a7a7a7
xst.color8:       #5f5a60
xst.color9:       #cf6a4c
xst.color10:      #8f9d6a
xst.color11:      #f9ee98
xst.color12:      #7587a6
xst.color13:      #9b859d
xst.color14:      #afc4db
xst.color15:      #ffffff
xst.color16:      #cda869
xst.color17:      #9b703f
xst.color18:      #323537
xst.color19:      #464b50
xst.color20:      #838184
xst.color21:      #c3c3c3
